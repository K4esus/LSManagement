                    </select>
                </th>
                <th>
                    <label for="cycle"></label>
                    <select id="cycle" name="cycle" required>
                        <option value="LEER" {% if fields[3] == 'LEER' %}selected{% endif %}>LEER</option>
                        <option value="H1" {% if fields[3] == 'H1' %}selected{% endif %}>H1</option>
                        <option value="H2" {% if fields[3] == 'H2' %}selected{% endif %}>H2</option>
