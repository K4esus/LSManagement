                        <option value="Z" {% if fields[3] == 'Z' %}selected{% endif %}>Z</option>
                    </select>
                </th>
                <th>
                    <label for="lime"></label>
                    <select id="lime" name="lime" required>
                        <option value="JA" {% if fields[4] == 'JA' %}selected{% endif %}>JA</option>
                        <option value="NEIN" {% if fields[4] == 'NEIN' %}selected{% endif %}>NEIN</option>
