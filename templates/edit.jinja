{% extends "base.jinja" %}

{% block content %}
    <table style="width:100%">
        <tr>
            {% for attribute in attributes %}
                <th>{{ attribute }}</th>
            {% endfor %}
        </tr>
        <tr>
            <!-- Input for fieldnumber -->
            <th id="fieldnumber">
                {{ fields[0] }}
            </th>
             <form action="/edit/{{ fields[0] }}" method="post">
                <th>
                    <label for="crop"></label>
                    <select id="crop" name="crop" required>
                        <option value="WEIZEN" {% if fields[1] == 'WEIZEN' %}selected{% endif %}>WEIZEN</option>
                        <option value="GERSTE" {% if fields[1] == 'GERSTE' %}selected{% endif %}>GERSTE</option>
                        <option value="RAPS" {% if fields[1] == 'RAPS' %}selected{% endif %}>RAPS</option>
                        <option value="HAFER" {% if fields[1] == 'HAFER' %}selected{% endif %}>HAFER</option>
                        <option value="MAIS" {% if fields[1] == 'MAIS' %}selected{% endif %}>MAIS</option>
                        <option value="SONNENBLUMEN" {% if fields[1] == 'SONNENBLUME' %}selected{% endif %}>SONNENBLUMEN</option>
                        <option value="SOJA" {% if fields[1] == 'SOJA' %}selected{% endif %}>SOJA</option>
                        <option value="KARTOFFELN" {% if fields[1] == 'KARTOFFELN' %}selected{% endif %}>KARTOFFELN</option>
                        <option value="RUEBEN" {% if fields[1] == 'RUEBEN' %}selected{% endif %}>RUEBEN</option>
                        <option value="HIRSE" {% if fields[1] == 'HIRSE' %}selected{% endif %}>HIRSE</option>
                        <option value="TRAUBEN" {% if fields[1] == 'TRAUBEN' %}selected{% endif %}>TRAUBEN</option>
                        <option value="OLIVEN" {% if fields[1] == 'OLIVEN' %}selected{% endif %}>OLIVEN</option>
                        <option value="PAPPEL" {% if fields[1] == 'PAPPEL' %}selected{% endif %}>PAPPEL</option>
                        <option value="GRAS" {% if fields[1] == 'GRAS' %}selected{% endif %}>GRAS</option>
                        <option value="RETTICH" {% if fields[1] == 'RETTICH' %}selected{% endif %}>RETTICH</option>
                        <option value="LEER" {% if fields[1] == 'LEER' %}selected{% endif %}>LEER</option>
                    </select>
                </th>
                <th>
                    <label for="precrop"></label>
                    <select id="precrop" name="precrop" required>
                        <option value="WEIZEN" {% if fields[2] == 'WEIZEN' %}selected{% endif %}>WEIZEN</option>
                        <option value="GERSTE" {% if fields[2] == 'GERSTE' %}selected{% endif %}>GERSTE</option>
                        <option value="RAPS" {% if fields[2] == 'RAPS' %}selected{% endif %}>RAPS</option>
                        <option value="HAFER" {% if fields[2] == 'HAFER' %}selected{% endif %}>HAFER</option>
                        <option value="MAIS" {% if fields[2] == 'MAIS' %}selected{% endif %}>MAIS</option>
                        <option value="SONNENBLUMEN" {% if fields[2] == 'SONNENBLUME' %}selected{% endif %}>SONNENBLUMEN</option>
                        <option value="SOJA" {% if fields[2] == 'SOJA' %}selected{% endif %}>SOJA</option>
                        <option value="KARTOFFELN" {% if fields[2] == 'KARTOFFELN' %}selected{% endif %}>KARTOFFELN</option>
                        <option value="RUEBEN" {% if fields[2] == 'RUEBEN' %}selected{% endif %}>RUEBEN</option>
                        <option value="HIRSE" {% if fields[2] == 'HIRSE' %}selected{% endif %}>HIRSE</option>
                        <option value="TRAUBEN" {% if fields[2] == 'TRAUBEN' %}selected{% endif %}>TRAUBEN</option>
