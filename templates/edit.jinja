                        <option value="NEIN" {% if fields[6] == 'NEIN' %}selected{% endif %}>NEIN</option>
                    </select>
                </th>
                <th>
                    <label for="roll"></label>
                    <select id="roll" name="roll" required>
                        <option value="JA" {% if fields[7] == 'JA' %}selected{% endif %}>JA</option>
                        <option value="NEIN" {% if fields[7] == 'NEIN' %}selected{% endif %}>NEIN</option>
                    </select>
                </th>
                <th>
                    <label for="status"></label>
                    <select id="status" name="status" required>
                        <option value="GEERNTET" {% if fields[8] == 'GEERNTET' %}selected{% endif %}>GEERNTET</option>
                        <option value="REIF" {% if fields[8] == 'REIF' %}selected{% endif %}>REIF</option>
                        <option value="WACHSEND" {% if fields[8] == 'WACHSEND' %}selected{% endif %}>WACHSEND</option>
                        <option value="GESAEHT" {% if fields[8] == 'GESAEHT' %}selected{% endif %}>GESAEHT</option>
                        <option value="SCHWARZ" {% if fields[8] == 'SCHWARZ' %}selected{% endif %}>SCHWARZ</option>
                    </select>
                </th>
                <button type="submit">Bestätigen</button>
            </form>
            <!-- Input for fieldsize -->
            <th id="fieldsize">
                {{ fields[9] }}
            </th>
        </tr>
    </table>
    <form action="/delete/{{ fields[0] }}" method="post">
        <button type="submit">Löschen</button>
    </form>
