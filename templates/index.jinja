{% extends "base.jinja" %}

{% block content %}
    <form action="/search" method="POST">
        <input class="search-input" name="search_query" type="search" placeholder="Suche nach Nummer">
        <button type="submit">Suchen</button>

        <div>{{ notFound }}</div>
    </form>
    <button type="button" onclick="addField()">Hinzuf√ºgen</button>

    <script>
        function addField() {
            window.location.replace("/add")
        }
    </script>
    <div>
        <table style="width:100%">
        <!-- Suche nach Attributen-->
          <tr>
            <form action="/attributesSearch" method="post">
                <th>
                    <!-- empty field -->
                </th>
                <th>
                    <label for="crop"></label>
                    <select id="crop" name="crop">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="WEIZEN">WEIZEN</option>
                        <option value="GERSTE">GERSTE</option>
                        <option value="RAPS">RAPS</option>
                        <option value="HAFER">HAFER</option>
                        <option value="MAIS">MAIS</option>
                        <option value="SONNENBLUMEN">SONNENBLUMEN</option>
                        <option value="SOJA">SOJA</option>
                        <option value="KARTOFFELN">KARTOFFELN</option>
                        <option value="RUEBEN">RUEBEN</option>
                        <option value="HIRSE">HIRSE</option>
                        <option value="TRAUBEN">TRAUBEN</option>
                        <option value="OLIVEN">OLIVEN</option>
                        <option value="PAPPEL">PAPPEL</option>
                        <option value="GRAS">GRAS</option>
                        <option value="RETTICH">RETTICH</option>
                        <option value="LEER">LEER</option>
                    </select>
                </th>
                <th>
                    <label for="precrop"></label>
                    <select id="precrop" name="precrop">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="WEIZEN">WEIZEN</option>
                        <option value="GERSTE">GERSTE</option>
                        <option value="RAPS">RAPS</option>
                        <option value="HAFER">HAFER</option>
                        <option value="MAIS">MAIS</option>
                        <option value="SONNENBLUMEN">SONNENBLUMEN</option>
                        <option value="SOJA">SOJA</option>
                        <option value="KARTOFFELN">KARTOFFELN</option>
                        <option value="RUEBEN">RUEBEN</option>
                        <option value="HIRSE">HIRSE</option>
                        <option value="TRAUBEN">TRAUBEN</option>
                        <option value="OLIVEN">OLIVEN</option>
                        <option value="PAPPEL">PAPPEL</option>
                        <option value="GRAS">GRAS</option>
                        <option value="RETTICH">RETTICH</option>
                        <option value="LEER">LEER</option>
                    </select>
                </th>
                <th>
                    <label for="cycle"></label>
                    <select id="cycle" name="cycle">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="LEER">LEER</option>
                        <option value="H1">H1</option>
                        <option value="H2">H2</option>
                        <option value="B">B</option>
                        <option value="Z">Z</option>
                    </select>
                </th>
                <th>
                    <label for="lime"></label>
                    <select id="lime" name="lime">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="JA">JA</option>
                        <option value="NEIN">NEIN</option>
                    </select>
                </th>
                <th>
                    <label for="fertilizer"></label>
                    <select id="fertilizer" name="fertilizer">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="JA">JA</option>
                        <option value="NEIN">NEIN</option>
                    </select>
                </th>
                <th>
                    <label for="plow"></label>
                    <select id="plow" name="plow">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="JA">JA</option>
                        <option value="NEIN">NEIN</option>
                    </select>
                </th>
                <th>
                    <label for="roll"></label>
                    <select id="roll" name="roll">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="JA">JA</option>
                        <option value="NEIN">NEIN</option>
                    </select>
                </th>
                <th>
                    <label for="status"></label>
                    <select id="status" name="status">
                        <option value="">-- Keine Auswahl --</option>
                        <option value="GEERNTET">GEERNTET</option>
                        <option value="REIF">REIF</option>
                        <option value="WACHSEND">WACHSEND</option>
                        <option value="GESAEHT">GESAEHT</option>
                        <option value="SCHWARZ">SCHWARZ</option>
                    </select>
                </th>
                <th>
                    <button type="submit">Senden</button>
                </th>

            </form>
          </tr>
        <!-- Spaltenbeschreibung-->
          <tr>
              {% for attribute in attributes %}
              <th>{{ attribute }}</th>
              {% endfor %}
          </tr>
        <!-- Zeilen-->

                {% if not fields_type %}
                    <tr>
                        <th><button type="button" onclick=window.location.replace("edit/{{ fields[0] }}")>{{ fields[0] }}</button></th>
                        <th>{{ fields[1] }}</th>
                        <th>{{ fields[2] }}</th>
                        <th>{{ fields[3] }}</th>
                        <th>{{ fields[4] }}</th>
                        <th>{{ fields[5] }}</th>
                        <th>{{ fields[6] }}</th>
                        <th>{{ fields[7] }}</th>
                        <th>{{ fields[8] }}</th>
                        <th>{{ fields[9] }}</th>
                    </tr>
                {% else %}
                    {% for field in fields %}
                        <tr>
                            <th><button type="button" onclick=window.location.replace("edit/{{ field[0] }}")>{{ field[0] }}</button></th>
                            <th>{{ field[1] }}</th>
                            <th>{{ field[2] }}</th>
                            <th>{{ field[3] }}</th>
                            <th>{{ field[4] }}</th>
                            <th>{{ field[5] }}</th>
                            <th>{{ field[6] }}</th>
                            <th>{{ field[7] }}</th>
                            <th>{{ field[8] }}</th>
                            <th>{{ field[9] }}</th>
                        </tr>
                    {% endfor %}
                {% endif %}
        </table>
    </div>
{% endblock %}